@page "/seat-map/{TripId:int}"
@using BUS360.Model
@using BUS360.Services
@using Microsoft.AspNetCore.SignalR.Client
@inject BusService BusService
@inject NavigationManager Nav
@implements IAsyncDisposable

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Sơ đồ ghế - Chuyến #@TripId</h2>
        <span class="badge bg-info p-2">Trạng thái: Real-time</span>
    </div>

    <div class="row">
        <div class="col-md-7">
            <div class="p-4 border rounded bg-light shadow-sm">
                <div class="row row-cols-4 g-3 justify-content-center">
                    @foreach (var seat in Seats)
                    {
                        <div class="col text-center">
                            <div @onclick="() => SelectSeat(seat)"
                                 class="p-3 rounded border @GetSeatClass(seat)"
                                 style="cursor: pointer; transition: 0.3s;">
                                @seat.SeatNumber
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="fw-bold mb-3">Chú thích trạng thái</h5>
                    <div class="d-flex align-items-center mb-2">
                        <div class="p-3 bg-white border me-2 rounded"></div> <span>Ghế trống</span>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <div class="p-3 bg-warning me-2 rounded"></div> <span>Đang chờ thanh toán (Pending)</span>
                    </div>
                    <div class="d-flex align-items-center">
                        <div class="p-3 bg-danger me-2 rounded"></div> <span>Đã có khách (Booked)</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public int TripId { get; set; }
    private List<TripSeat> Seats = new();
    private HubConnection? hubConnection;

    protected override async Task OnInitializedAsync()
    {
        Seats = BusService.GetSeats(TripId);

        hubConnection = new HubConnectionBuilder()
            .WithUrl(Nav.ToAbsoluteUri("/bushub"))
            .Build();

        hubConnection.On<string, string>("ReceiveSeatUpdate", (seatNumber, status) =>
        {
            var seat = Seats.FirstOrDefault(s => s.SeatNumber == seatNumber);
            if (seat != null)
            {
                if (Enum.TryParse<SeatStatus>(status, out var newStatus))
                {
                    seat.Status = newStatus;
                }
                InvokeAsync(StateHasChanged);
            }
        });

        await hubConnection.StartAsync();
        await hubConnection.SendAsync("JoinTrip", TripId);
    }

    private async Task SelectSeat(TripSeat seat)
    {
        if (seat.Status == SeatStatus.Available)
        {
            await BusService.TryLockSeat(TripId, seat.SeatNumber, "Staff_User_Test");
        }
    }

    private string GetSeatClass(TripSeat seat) => seat.Status switch
    {
        SeatStatus.Booked => "bg-danger text-white border-danger shadow-sm",
        SeatStatus.Pending => "bg-warning text-dark border-warning",
        _ => "bg-white text-dark hover-shadow"
    };

    public async ValueTask DisposeAsync()
    {
        if (hubConnection is not null)
        {
            await hubConnection.DisposeAsync();
        }
    }
}