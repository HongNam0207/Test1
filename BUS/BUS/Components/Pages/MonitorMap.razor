@page "/monitor"
@inject BUS.Services.BusDataService Data
@using BUS.Model

<div class="container-fluid mt-4">
    <h3>Hệ thống Giám sát Vận hành</h3>
    <div class="row">
        <div class="col-md-8">
            <div id="map" style="height: 600px; width: 100%;" class="border shadow"></div>
        </div>
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header bg-dark text-white">Trạng thái đội xe</div>
                <ul class="list-group list-group-flush">
                    @foreach (var trip in Data.Trips)
                    {
                        <li class="list-group-item d-flex justify-content-between">
                            @trip.RouteName
                            <span class="badge bg-info">@trip.Status</span>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>